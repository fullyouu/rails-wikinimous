<div class="box">
  <h2>Edit article</h2>
  <%= form_for @article do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <%= f.label :content %>
    <%= f.text_field :content %>
    <%= f.submit %>
  <% end %>

  <%= link_to 'Back to all articles', articles_path %>
</div>

